generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ORG
  USER
}

enum Independence {
  SMALL
  MEDIUM
  GREAT
}

enum Size {
  SMALL
  MEDIUM
  BIG
}

model Pet {
  id           String       @id @default(uuid())
  name         String
  description  String
  energy       Int
  size         Size
  independence Independence
  ambient      String

  org   Org    @relation(fields: [orgId], references: [id])
  orgId String @unique

  @@map("pets")
}

model Org {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  phone    String
  password String
  role     Role   @default(ORG)

  address   Address @relation(fields: [addressId], references: [id])
  addressId String  @unique

  Pet Pet[]

  @@map("orgs")
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  role     Role   @default(USER)

  @@map("users")
}

model Address {
  id           String   @id @default(uuid())
  cep          String
  street       String
  number       String
  neighborhood String
  complement   String?
  city         String
  state        String
  created_at   DateTime @default(now())

  org Org?

  @@map("addresses")
}
